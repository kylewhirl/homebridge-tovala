{
  "pluginAlias": "TovalaSmartOven",
  "pluginType": "platform",
  "singular": true,
  "headerDisplay": "<h1><p align='center'>Tovala Smart Oven Integration</H1></p><h1><p align='center'><img src='https://path-to-your-logo.png' width='80%' style='vertical-align:middle'></p></h1> <br><b>Setup Instructions:</b><br><br>1 - Enter your Tovala email and password below.<br>2 - After saving and restarting Homebridge, your custom recipes will be available as switches.<br><br>For detailed setup instructions, please visit our <a href='https://github.com/your-repo-link'>GitHub page</a>.<br>",
  "footerDisplay": "Tovala Oven Plugin: Control your smart oven from Homebridge",
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "<b>Name</b>",
        "type": "string",
        "required": true,
        "default": "TovalaOven",
        "description": "Plugin name as displayed in the Homebridge log"
      },
      "email": {
        "title": "<b>Email</b>",
        "type": "string",
        "required": true,
        "description": "Email for Tovala account"
      },
      "password": {
        "title": "<b>Password</b>",
        "type": "string",
        "required": true,
        "description": "Password for Tovala account"
      },
      "userId": {
        "title": "<b>User ID</b>",
        "type": "string",
        "required": true,
        "description": "User ID associated with your Tovala account"
      },
      "debug": {
        "title": "<b>Debug</b>",
        "type": "boolean",
        "default": false,
        "description": "Enable debug level logging for troubleshooting."
      }
    }
  },
  "layout": [
    {
      "type": "fieldset",
      "title": "Required Settings",
      "items": [
        {
          "type": "flex",
          "flex-flow": "row wrap",
          "items": [
            "email",
            {
              "key": "password",
              "type": "password"
            },
            "userId"
          ]
        }
      ]
    },
    {
      "type": "fieldset",
      "title": "Optional Settings",
      "expandable": true,
      "expanded": false,
      "items": [
        "debug"
      ]
    }
  ]
}
